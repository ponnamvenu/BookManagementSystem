<div class="row">
	<div class="col col-12 col-xs-12  col-md-6 col-lg-4" >
	<h5> Author - @Model.AuthorId </h5>
	<h5> Cover   - @Model.Cover </h5>
	<h5> Price  - @Model.Price</h5>
	</div>

	<div class="col col-12 col-xs-12  col-md-6 col-lg-8" >
		<h2>Description</h2>
		<p>@Model.Description</p>
		<hr />
		
	</div>
</div>