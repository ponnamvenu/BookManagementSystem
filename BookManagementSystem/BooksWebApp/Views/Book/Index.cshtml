@model IEnumerable<Book>
<a asp-action="create" class="btn btn-link">Add Book</a>
<h2 id="page-title"> Available Books</h2>

<table class="table table-compact table-striped table-hover">
	<thead>
		<tr>
			<th>Title</th>
			<th>Price</th>
			<th>Cover</th>
			<th>Description</th>
			
			<th>Actions</th>
		</tr>
	</thead>
	<tbody>
		@foreach(var Book in Model)
		{
			<tr>
			
				<td>@Book.Title</td>
				<td>@Book.Price </td>
				<td>@Book.Cover</td>
				<td> @Book.Description</td>
				<td>
					<a class="btn btn-sm btn-primary" asp-controller="book" asp-action="details" asp-route-id="@Book.Id" >Details</a>
						<a class="btn btn-sm btn-primary" asp-controller="book" asp-action="edit" asp-route-id="@Book.Id" >Edit</a>
						<a class="btn btn-sm btn-danger" asp-controller="book" asp-action="delete" asp-route-id="@Book.Id" >Delete</a>
				
				</td>
			</tr>
		}
		
		<tr>
		
		</tr>
	</tbody>
	
</table>