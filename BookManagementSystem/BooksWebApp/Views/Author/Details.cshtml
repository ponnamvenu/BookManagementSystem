@model Author

<h2 id="page-title"> @Model.Name</h2>
<div class="row">
	<div class="col col-12 col-xs-12  col-md-6 col-lg-4" >
		<img src="@Model.Photo" alt="@Model.Name" class="profile-image"/>
	</div>

	<div class="col col-12 col-xs-12  col-md-6 col-lg-8" >
		<h2>About</h2>
		<p>@Model.Biography</p>
		<hr />
		@foreach(var tag in Model.Tags)
		{
			<span class="badge badge-black">@tag</span>
		}
	</div>
</div>